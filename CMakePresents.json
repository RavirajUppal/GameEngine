{
  "version": 5,

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17"
      }
    },

    {
      "name": "mac-debug",
      "inherits": "base",
      "binaryDir": "build/mac-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mac-release",
      "inherits": "base",
      "binaryDir": "build/mac-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "win-debug",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "build/win-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-release",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "build/win-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "mac-debug-build",
      "configurePreset": "mac-debug"
    },
    {
      "name": "mac-release-build",
      "configurePreset": "mac-release"
    },
    {
      "name": "win-debug-build",
      "configurePreset": "win-debug"
    },
    {
      "name": "win-release-build",
      "configurePreset": "win-release"
    }
  ]
}
